<tr class="review"> 
  <td><%= review.author %></td>
  <td><%= review.im_version %></td>
  <td><%= review.im_rating %></td>
  <td><%= review.itunes_id %></td>
  <td><%= review.title %></td>
  <td>
  <%=  if review.content.length > 70
   review.content[0, 70] + '...'
  else
   review.content
  end 
    %>
    </td>       
   <td>
    <%= link_to t('.open', :default => t("helpers.links.show")),
                review_path(review), :class => 'btn btn-default  btn-block' %>
<!--     <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                review_path(review),
                :method => :delete,
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-block btn-danger' %>
  -->
  </td>
</tr>
<%= simple_form_for @app, :html => { :class => 'form-vertical' } do |f| %>
  <%= f.input :name %>
  <%= error_span(@app[:name]) %>
  <%= f.input :itunes_id %>
  <%= error_span(@app[:itunes_id]) %>

  <%= f.button :submit, :class => 'btn-info' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                apps_path, :class => 'btn btn-default ' %>
<% end %>

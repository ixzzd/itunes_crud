<%- model_class = App -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %>: <%= @app.name %> </h1>
</div>

<div class="row">
  <div class="col-md-1">  <img src=<%= @app.image_url %> class="img-rounded" alt="Cinque Terre" width="75" height="75"> </div>  

  <div class="col-md-6">
    <dl class="dl-vertical">
      <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
      <dd><%= @app.name %></dd>
      <dt><strong><%= model_class.human_attribute_name(:itunes_id) %>:</strong></dt>
      <dd><%= @app.itunes_id %></dd>
    </dl>
  </div>
</div>

<%=  link_to "Import Reviews", 
    url_for( :controller => :apps, :action => :import_reviews),:remote=>true,:class => 'btn btn-default '  %>

<%= link_to t('.back', :default => t("helpers.links.back")),
              apps_path, :class => 'btn btn-default '  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_app_path(@app), :class => 'btn btn-default ' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              app_path(@app),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

<br><br>

<% if @reviews %>

<%= render :partial => '/reviews/reviews_index', :log_entry =>@reviews %>

<% end %>        


<%- model_class = App -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %>: <%= @app.name %> </h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @app.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:itunes_id) %>:</strong></dt>
  <dd><%= @app.itunes_id %></dd>
</dl>

<%=  link_to "Import Reviews", 
    url_for( :controller => :apps, :action => :import_reviews),:remote=>true,:class => 'btn btn-default'  %>

<%= link_to t('.back', :default => t("helpers.links.back")),
              apps_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_app_path(@app), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              app_path(@app),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

<% if @reviews %>
  <div class="page-header">
    <h1> Reviews: </h1>
  </div>
    <table class="table table-striped">
      <thead>
        <tr>
          <th><%= model_class.human_attribute_name(:id) %></th>
          <th><%= model_class.human_attribute_name(:author) %></th>
          <th><%= model_class.human_attribute_name(:im_version) %></th>
          <th><%= model_class.human_attribute_name(:im_rating) %></th>
          <th><%= model_class.human_attribute_name(:itunes_id) %></th>
          <th><%= model_class.human_attribute_name(:title) %></th>
          <th><%= model_class.human_attribute_name(:content) %></th>
          <th><%=t '.actions', :default => t("helpers.actions") %></th>
        </tr>
      </thead>
      <tbody id="reviews">
         <%=  render @reviews %>
      </tbody>
    </table>  

    <%= will_paginate @reviews, renderer: BootstrapPagination::Rails %> 

  <script type="text/javascript">
    // $('#reviews').append('<%= escape_javascript render(@reviews) %>');
    // $('.pagination').replaceWith('<%= escape_javascript will_paginate(@reviews) %>');
  </script>

<% end %>             
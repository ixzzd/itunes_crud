<%- model_class = App -%>
<h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>

<br><br>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_app_path,
            :class => 'btn btn-info' %>


<table class="table  table-striped">
  <thead>
    <tr>
      <th></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:itunes_id) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @apps.each do |app| %>
      <tr>
        <td><img src=<%= app.image_url %> class="img-rounded" alt="Cinque Terre" width="75" height="75"></td>
        <td><%= link_to app.name, app_path(app) %></td>
        <td><%= app.itunes_id %></td>
        <td>

          <%= link_to t('.open', :default => "Open"),
                app_path(app), :class => 'btn btn-default  btn-m' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_app_path(app), :class => 'btn btn-default  btn-m' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      app_path(app),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-m btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>